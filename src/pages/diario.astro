<head>
  <meta charset="UTF-8" />
  <!-- DataTables base CSS -->
  <link rel="stylesheet" href="https://cdn.datatables.net/2.3.4/css/dataTables.dataTables.css" />
  <!-- Tema oscuro oficial -->
  <link rel="stylesheet" href="https://cdn.datatables.net/2.3.4/css/dataTables.dataTables.css" />
</head>


<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-900 via-blue-700 to-cyan-600">
  <div class="bg-blue-950 bg-opacity-80 rounded-2xl shadow-2xl p-10 w-full max-w-4xl border border-blue-800">
    <h1 class="text-3xl font-bold mb-8 text-cyan-200 text-center drop-shadow">Reporte Diario</h1>
    <div class="flex gap-4 mb-6 justify-center">
      <a href="/api/exportar_diario" class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-cyan-100 border border-cyan-400 rounded-xl shadow transition-all duration-200 text-lg font-semibold">Descargar Excel</a>
      <button class="px-6 py-3 bg-cyan-700 hover:bg-cyan-800 text-cyan-100 border border-cyan-400 rounded-xl shadow transition-all duration-200 text-lg font-semibold" onclick="window.history.back()">Volver</button>
    </div>
    <div class="flex gap-4 mb-8 justify-center">
      <button class="px-6 py-2 rounded-xl shadow font-semibold border bg-blue-600 text-white border-cyan-400" onclick="cargarApendice(1)">Apéndice Diario 1 Permisos</button>
      <button class="px-6 py-2 rounded-xl shadow font-semibold border bg-blue-600 text-white border-cyan-400" onclick="cargarApendice(2)">Apéndice Diario 2 Productos</button>
      <button class="px-6 py-2 rounded-xl shadow font-semibold border bg-blue-600 text-white border-cyan-400" onclick="cargarApendice(3)">Apéndice Diario 3 Unidades de Medida</button>
    </div>
    <!-- Contenedor dinámico -->
    <div id="apendice-table-container" class="w-full"></div>
  </div>
</div>

<script type="module" src="/src/scripts/fetchAppendixDiario.js"></script>
</script>
